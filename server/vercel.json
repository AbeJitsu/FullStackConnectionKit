{
  "version": 2,
  "builds": [{ "src": "api/**/*.js", "use": "@vercel/node" }],
  "routes": [
    { "src": "/api/info(.*)", "dest": "/api/infoServerless.js" },
    { "src": "/api/items(.*)", "dest": "/api/items.js" },
    { "src": "/api/cors-test(.*)", "dest": "/api/cors-test.js" },
    { "src": "/api/counter-operations", "dest": "/api/counter-operations.js" },
    { "src": "/api/sse", "dest": "/api/sse.js" },
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://full-stack-connection-kit.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    }
  ]
}
